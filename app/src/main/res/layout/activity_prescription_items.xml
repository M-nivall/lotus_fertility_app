<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/lightGray"
    tools:context=".Staff.Pharmacist.PrescriptionItems">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CardView for Surrogate Details -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intended Parent Details"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />


                <TextView
                    android:id="@+id/tvParentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent Name"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvParentNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent Number"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvParentEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent Email"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvParentDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partner Details"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="14dp"/>

                <TextView
                    android:id="@+id/tvPartnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partner Name"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvPartnerNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partner Number"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvPartnerEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partner Email"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected Surrogate Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvSurrogateName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surrogate Name"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvSurrogateNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surrogate Number"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvSurrogateEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surrogate Email"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Prescription Details Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_prescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor's Prescription"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:paddingBottom="8dp"/>

                <!-- Scrollable Description -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/rounded_background"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvPrescriptionDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:lineSpacingExtra="4dp"/>

                </ScrollView>

                <!-- Status and Date -->
                <TextView
                    android:id="@+id/tvPrescriptionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Pending"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvPrescriptionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: 2024-10-08"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="4dp"/>

                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btnConfirmDispense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm Dispensed"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:padding="12dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_medicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor's Prescription"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:paddingBottom="8dp"/>

                <!-- Scrollable Description -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_background"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvDoctorPrescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:lineSpacingExtra="4dp"/>

                </ScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="Select Medicine"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ibuprofen" />

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paracetamol"/>

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Naproxen" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acetaminophen" />

                    <CheckBox
                        android:id="@+id/checkBox5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fluoxetine" />
                    <CheckBox
                        android:id="@+id/checkBox6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estrogen" />

                </LinearLayout>

                <EditText
                    android:visibility="gone"
                    android:id="@+id/edt_materials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Materials"/>

                <Button
                    android:id="@+id/btn_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Request Medicine"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:padding="12dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

</ScrollView>