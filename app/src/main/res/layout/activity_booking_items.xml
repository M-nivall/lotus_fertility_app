<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/lightGray"
    tools:context=".IntendedParent.BookingItems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CardView for Surrogate Details -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Appointment Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#ID"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvSurrogateName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected Surrogate:"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvBookingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking Date:"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvPartnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partner Name:"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount Paid:"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack" />
                <!-- View Receipt Button -->
                <Button
                    android:id="@+id/btnViewReceipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Receipt"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_receipt"
                    android:drawablePadding="8dp"/>
                <!-- View Agreement Button -->
                <Button
                    android:id="@+id/btnViewAgreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Agreement"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorAccent"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_pdf"
                    android:drawablePadding="8dp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Note to Parent -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notice"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/tvApprovalNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your appointment has been successfully approved. Kindly take note of your scheduled appointment date below and proceed by selecting an attorney for the necessary agreements.\nâ€¢ Visit our premises on the specified date for surrogate processing. Please find the office location details below."
                    android:textColor="@color/colorBlack"
                    android:paddingBottom="10dp"/>

                <!-- Appointment Date -->
                <TextView
                    android:id="@+id/tvAppointmentDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appointment Date: "
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:paddingBottom="12dp"/>

                <!-- Our Location -->
                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location: Nairobi, Upper Hill, KMA Center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:paddingBottom="12dp"/>

                <!-- Attorney Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select an Attorney:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:paddingBottom="4dp"/>

                <EditText
                    android:id="@+id/edtAttorney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Choose an Attorney"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@drawable/edittext_background1"
                    android:drawableStart="@drawable/ic_dropdown"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"/>

                <!-- Proceed Button -->
                <Button
                    android:id="@+id/btnProceed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/layout_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:background="@android:color/white">

            <!-- Feedback Section -->
            <TextView
                android:id="@+id/txt_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Give Your Remarks"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edt_remarks"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Enter your Remarks here..."
                android:gravity="top|start"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="16dp" />

            <!-- Confirm and Approval Buttons -->
            <Button
                android:id="@+id/btnConfirmCompletion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Completion"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
