<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="16dp"
    tools:context="com.example.Varsani.Clients.InvoiceItems">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginBottom="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lotus Fertility"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_company_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P. O. Box 1053 - 80517, Nairobi, Kenya"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_company_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: +254 5429 000 | +254 4569 000 "
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/tv_company_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: lotusfertility@gmail.com"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- Booking Details -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Details"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:paddingBottom="8dp" />
        <TextView
            android:id="@+id/tv_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parent: "
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tv_surrogate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="surrogate: "
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tv_booking_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Date: "
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tv_surrogate_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surrogate Fee: "
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tv_service_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Fee: "
            android:textSize="14sp"
            android:paddingBottom="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack" />
        <TextView
            android:id="@+id/tv_total_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Fee: "
            android:textSize="14sp"
            android:paddingBottom="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" />
        <Button
            android:visibility="gone"
            android:id="@+id/btn_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Receipt"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/layout_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <!-- Payment Options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Options"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/rg_payment_methods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_mpesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="M-Pesa" />

                <RadioButton
                    android:id="@+id/rb_bank_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="Bank" />
            </RadioGroup>

            <!-- Payment Reference -->
            <EditText
                android:id="@+id/et_payment_reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Payment Reference Code"
                android:inputType="text"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:elevation="4dp"
                android:background="@drawable/edittext_background1" />
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="gone"
                style="?android:attr/progressBarStyleLarge"
                android:layout_marginTop="16dp" />


            <!-- Submit Button -->
            <Button
                android:id="@+id/btn_submit_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make Payment"
                android:backgroundTint="#007BFF"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp" />

            <!-- Footer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/tv_footer_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thank you for your choosing lotus fertility!"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>