<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top|center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/colorAccent"
            android:gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo"
                android:contentDescription="Logo"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lotus Fertility: From Life to Life"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Heading for Surrogates -->
        <TextView
            android:id="@+id/txt_surrogates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Surrogates"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginBottom="8dp" />

        <!-- CardView for Surrogate RecyclerView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp"
            android:backgroundTint="@android:color/white">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" />
        </androidx.cardview.widget.CardView>

        <!-- Description and Apply Button for Surrogates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/txt_surrogate_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apply to become a surrogate mother."
                android:textColor="@color/colorBlack"
                android:padding="8dp" />

            <Button
                android:id="@+id/btn_apply_surrogate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Heading for Sperm Donors -->
        <TextView
            android:id="@+id/txt_sperm_donors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Egg Donors"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            android:padding="8dp"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- CardView for Sperm Donor RecyclerView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp"
            android:backgroundTint="@android:color/white">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" />
        </androidx.cardview.widget.CardView>

        <!-- Description and Apply Button for Sperm Donors -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/txt_sperm_donor_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apply to join as a egg donor."
                android:textColor="@color/colorBlack"
                android:padding="8dp" />

            <Button
                android:id="@+id/btn_apply_sperm_donors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <!-- Bottom LinearLayout with Buttons -->
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorButtonNormal"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/imghome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:id="@+id/imgcart"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:src="@drawable/cart"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:id="@+id/imghelp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/help" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
