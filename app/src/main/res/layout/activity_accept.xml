<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Suppliers.Accept"
    android:background="@color/lightGray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/card_payment"
                android:elevation="8dp"
                android:radius="12dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/btn_printfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:contentDescription="print"
                        android:src="@drawable/ic_print" />

                    <LinearLayout
                        android:id="@+id/receipt_navbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lotus Fertility"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#333"
                            android:layout_gravity="center"
                            android:paddingBottom="4dp"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact: +2547757550000"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#555"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email: Info@lotusfertility.com"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#555"
                            android:layout_gravity="center"
                            android:paddingBottom="16dp"
                            android:fontFamily="sans-serif"/>

                        <!-- Receipt Header -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Receipt"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#333"
                            android:layout_gravity="center"
                            android:paddingBottom="16dp"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txv_requestID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Request ID: 1234"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/txv_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Item: Cement"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:paddingTop="5dp" />
                    <TextView
                        android:id="@+id/txv_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantity: 100"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:paddingTop="5dp" />

                    <TextView
                        android:id="@+id/txv_requestDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date: 10/03/2025"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:paddingTop="5dp" />

                    <TextView
                        android:id="@+id/txv_requestStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status: Pending"
                        android:textSize="15sp"
                        android:textColor="@color/colorAccent"
                        android:paddingTop="5dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"
                        android:layout_marginVertical="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Invoice Info"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/unitprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price/m2: Ksh 500"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:paddingTop="5dp" />

                    <TextView
                        android:id="@+id/request_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantity: 100"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:paddingTop="5dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"
                        android:layout_marginVertical="10dp" />

                    <TextView
                        android:id="@+id/edt_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total: Ksh 50,000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="5dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"
                        android:layout_marginVertical="10dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/btn_color"
                        android:text=" Confirm Supply &amp; Send Invoice"
                        android:layout_margin="25dp"
                        android:id="@+id/btn_submit"
                        android:textColor="@color/white"/>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
