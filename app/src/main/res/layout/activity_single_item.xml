<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:padding="16dp"
    android:layout_margin="8dp"
    tools:context="com.example.Varsani.Clients.SingleItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_photo"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txv_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/txv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age: 30"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/txv_blood_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Type: O+"
                    android:textSize="14sp"
                    android:textColor="#666666"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height: 170cm"
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/txv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight: 65kg"
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/txv_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Education: Bachelor's Degree"
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/txv_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fee: Ksh 100,000"
                android:textSize="14sp"
                android:textColor="#0079D6"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: Nairobi, Kenya"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_proceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Proceed"
                android:textColor="@color/colorWhite" />

            <ProgressBar
                android:visibility="gone"
                android:id="@id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
