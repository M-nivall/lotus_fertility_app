<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Varsani.Staff.Finance.OrderDetails"
    android:padding="16dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="80dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Payment Details -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Details"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:layout_marginStart="12dp"/>

                    <TextView android:id="@+id/txtSurrogateFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surrogate Fee: "
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />
                    <TextView android:id="@+id/txtServiceFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Fee: "
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"/>
                    <TextView android:id="@+id/txtTotalFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Fee: "
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"/>
                    <TextView android:id="@+id/txtPaymentCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Code: "
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"/>
                    <TextView android:id="@+id/txtPaymentDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Date: "
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"/>
                    <TextView android:id="@+id/txtPaymentStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Status: "
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Intended Parent Info -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intended Parent Info"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginStart="12dp"
                        android:textColor="#000"/>

                    <TextView android:id="@+id/txtParentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parent Name: "
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"/>
                    <TextView android:id="@+id/txtParentPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parent Phone: "
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"/>
                    <TextView android:id="@+id/txtParentEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parent Email: "
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Selected Surrogate -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selected Surrogate"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:layout_marginStart="12dp"/>

                    <TextView android:id="@+id/txtSurrogateName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surrogate Name: "
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"/>
                    <TextView android:id="@+id/txtSurrogatePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surrogate Phone: "
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"/>
                    <TextView android:id="@+id/txtSurrogateEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surrogate Email: "
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Approve Button with ProgressBar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:background="#FFF">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            style="?android:attr/progressBarStyleSmall" />

        <Button
            android:id="@+id/btnApprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approve Payment"
            android:layout_marginStart="8dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFF"/>
    </LinearLayout>
</RelativeLayout>
